<section class="container">
    <div class="row">
        {{!-- <div class="mt-3 d-flex"><a href="/admin/add-product" class="btn btn-success ms-auto">Add Products</a></div> --}}
        <div class="mt-3 d-flex"><a href="/admin/addUser" class="btn btn-success ms-auto">Add user</a></div>
    </div>
    
    <div class="mt-4">
      <table class="table mt-4" id="productsTable">
        <thead>
          <tr>
            {{!-- <th scope="col">No</th> --}}
            {{!-- <th scope="col">number</th> --}}
            <th scope="col">user name</th>
            <th scope="col">email</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
              <tr>
                {{!-- <th scope="row">1</th> --}}
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td><a href="/admin/editUser/{{this._id}}" class="btn btn-primary">Edit</a> &nbsp;
                <a href="/admin/deleteuser/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}')">Delete</a></td>
              </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    
</section>

<script>

  $(function () {
    $('#productsTable').DataTable();
  });

</script>