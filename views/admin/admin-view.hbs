<section class="container">
    <div class="row">
        <div class="mt-3 d-flex"><a href="/admin/add-product" class="btn btn-success ms-auto">Add Products</a></div>
        {{!-- <div class="mt-3 d-flex"><a href="/admin/add-user" class="btn btn-success ms-auto">Add user</a></div> --}}
    </div>
    
    <div class="mt-4">
      <table class="table mt-4" id="productsTable">
        <thead>
          <tr>
            {{!-- <th scope="col">No</th> --}}
            <th scope="col">Model</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
              <tr>
                {{!-- <th scope="row">1</th> --}}
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>Rs.{{this.price}}</td>
                <td><img style="width: 40px;height:40px" src="/product-images/{{this._id}}.jpg"></td>
                <td><a href="/admin/editProduct/{{this._id}}" class="btn btn-primary">Edit</a> &nbsp;
                <a href="/admin/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}')">Delete</a></td>
              </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    
</section>

<script>

  $(function () {
    $('#productsTable').DataTable();
  });

</script>