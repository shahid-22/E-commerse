<section>
  <div class='container'>
    <div class='row text-center'>

      {{#each products}}
        <div class='col-lg-3 col-md-4 col-sm-6 col-12 mt-4'>
          <div class='card' style='width: 15rem;height: 28rem;'>
            <img style="height: 12rem;" src="/product-images/{{this._id}}.jpg" class='card-img-top mx-auto'/>
            <div class='card-body'>
              <h5 class='card-title'>
                {{this.name}}
              </h5>
              <p class='card-text'>
                {{this.description}}
              </p>
              <p class='card-text fw-bold fs-5'>
                Rs.{{this.price}}
              </p>
              <a href='#' class='btn btn-primary'>
                Add to cart
              </a>
            </div>
          </div>
        </div>
      {{/each}}
      
    </div>
  </div>
</section>